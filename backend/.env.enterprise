# DocXP Enterprise Configuration
# PostgreSQL + AWS Bedrock Architecture

# Application Environment
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Vector Database Configuration
VECTOR_DB_TYPE=postgresql_pgvector
PGVECTOR_ENABLED=true

# Embedding Configuration  
EMBEDDING_PROVIDER=bedrock
BEDROCK_EMBED_MODEL_ID=amazon.titan-embed-text-v2:0
BEDROCK_EMBEDDING_DIMENSIONS=1024

# PostgreSQL Vector Configuration
POSTGRESQL_VECTOR_URL=postgresql+asyncpg://docxp_user:docxp_secure_2024@localhost:5432/docxp_enterprise
DATABASE_URL=postgresql+asyncpg://docxp_user:docxp_secure_2024@localhost:5432/docxp_enterprise

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=msh

# API Configuration
API_PORT=8001

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# OpenSearch Configuration (for hybrid search)
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_INDEX_NAME=docxp_v1_chunks

# Chat Model (AWS Bedrock Claude)
CHAT_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0

# Security
AUTH_ENABLED=false

# Performance Tuning
MAX_CONCURRENT_CHUNKS=4
MAX_RETRIES=3
AWS_API_TIMEOUT=30
BATCH_SIZE=50
MAX_CONCURRENT_REPOS=2